<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_title_popup"
        android:text="@string/title_layer"
        android:textSize="20sp" />



        <LinearLayout
            android:id="@+id/linearlayout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_field_name">
            <!--ID sự cố-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/width_title_item_docso"
                    android:layout_height="wrap_content"
                    android:text="Mã: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_id_su_co"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--vị trí sự cố-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/width_title_item_docso"
                    android:layout_height="wrap_content"
                    android:text="Vị trí: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_vi_tri_su_co"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imgBtn_viewtablethoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_table" />
        <ImageButton
            android:id="@+id/imgBtn_ViewMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_info" />

        <ImageButton
            android:id="@+id/imgBtn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

</LinearLayout>